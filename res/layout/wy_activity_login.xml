<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="center_vertical">

	<!-- title -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="15dp"
		android:orientation="horizontal"
		android:background="@drawable/wy_title_bg_style1"
		android:gravity="center">
		
		<!-- icon -->
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/wy_icon_welcome_back"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:orientation="vertical">
		
			<!-- hint text -->
			<TextView
				android:id="@+id/wy_text"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				style="@android:style/TextAppearance.Medium"
				android:singleLine="true"
				android:text="@string/wy_label_welcome_back"
				android:textColor="@color/wy_tertiary_text_dark"/>
		
			<!-- hint text 2 -->
			<TextView
				android:id="@+id/wy_text2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				style="@android:style/TextAppearance.Small"
				android:textColor="@color/wy_title_secondary_text_color"
				android:text="@string/wy_label_find_account_for_this_device"/>
			
		</LinearLayout>
			
	</LinearLayout>
	
	<!-- separator -->
	<View
		android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="@drawable/wy_separator_style2"/>

	<LinearLayout
		android:id="@+id/wy_panel"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:paddingTop="30dp"
		android:background="@drawable/wy_gradient_bg_style1_with_logo">

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="48dp">
			
			<LinearLayout
				android:id="@+id/wy_user_bar"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:layout_marginLeft="18dp"
				android:layout_marginRight="13dp"
				android:layout_centerInParent="true"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:background="@drawable/wy_user_bar_bg">
				
				<!-- username text -->
				<TextView
					android:id="@+id/wy_text3"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:paddingLeft="65dp"
					android:singleLine="true"
					style="@android:style/TextAppearance.Medium"/>
					
				<!-- separator -->
				<View
					android:layout_width="2dp"
					android:layout_height="fill_parent"
					android:background="@drawable/wy_separator_style1"/>
					
				<!-- point text -->
				<TextView
					android:id="@+id/wy_text4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:paddingRight="10dp"
					android:drawableLeft="@drawable/wy_icon_wiyun_point"
					android:drawablePadding="2dp"
					android:singleLine="true"
					style="@android:style/TextAppearance.Small"
					android:textColor="@android:color/white"/>
				
			</LinearLayout>
			
			<!-- avatar view -->
			<ImageView
				android:id="@+id/wy_image"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_alignLeft="@id/wy_user_bar"
				android:layout_alignParentTop="true"
				android:layout_alignParentBottom="true"
				android:background="@drawable/wy_picture_frame"
				android:scaleType="center"/>
			
			<!-- username edit text -->
			<EditText
				android:id="@+id/wy_edit"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_centerVertical="true"
				android:layout_alignRight="@id/wy_user_bar"
				android:layout_toRightOf="@id/wy_image"
				android:background="@drawable/wy_edit_box"
				android:hint="@string/wy_placeholder_enter_username"
				android:singleLine="true"/>
						
		</RelativeLayout>
		
		<!-- login button -->
		<Button
			android:id="@+id/wy_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginRight="13dp"
			android:background="@drawable/wy_button_style1"
			android:layout_gravity="right"
			android:drawableLeft="@drawable/wy_icon_mark"
			style="@android:style/TextAppearance.Medium"/>
			
	</LinearLayout>

	<LinearLayout
		android:id="@+id/wy_panel2"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:paddingTop="30dp"
		android:orientation="vertical"
		android:gravity="center">

		<!-- hint -->
		<TextView
			android:id="@+id/wy_text5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@android:style/TextAppearance.Small.Inverse"/>

		<!-- continue button -->		
		<Button
			android:id="@+id/wy_button2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="150dp"
			android:layout_marginTop="40dp"
			android:background="@drawable/wy_button_style1"
			style="@android:style/TextAppearance.Medium"
			android:text="@string/wy_button_continue"/>
					
	</LinearLayout>
	
</LinearLayout>
