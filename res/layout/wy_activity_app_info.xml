<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:scrollbarThumbVertical="@drawable/wy_scrollbar_vertical_thumb_style1"
	android:background="@color/wy_roundrect_container_bg">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<!-- name text -->
		<TextView
			android:id="@+id/wy_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="2dp"
			android:paddingBottom="2dp"
			android:paddingLeft="10dp"
			android:singleLine="true"
			android:gravity="center_vertical"
			android:background="@drawable/wy_header_cell_bg"
			style="@android:style/TextAppearance.Medium"
			android:textColor="@color/wy_header_cell_text_color"
			android:textStyle="bold"/>
			
		<!-- app info area -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:orientation="horizontal"
			android:background="@drawable/wy_cell_bg_style1">
			
			<!-- app icon -->
			<ImageView
				android:id="@+id/wy_image"
				android:layout_width="@dimen/wy_portrait_frame_size"
				android:layout_height="@dimen/wy_portrait_frame_size"
				android:scaleType="center"
				android:background="@drawable/wy_picture_frame"/>
				
			<!-- other info -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:orientation="vertical">
				
				<!-- seller text -->
				<TextView
					android:id="@+id/wy_text2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					style="@android:style/TextAppearance.Small.Inverse"/>
					
				<!-- price text -->
				<TextView
					android:id="@+id/wy_text3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					style="@android:style/TextAppearance.Small.Inverse"
					android:textStyle="bold"
					android:textColor="@android:color/black"/>
					
				<!-- short desc -->
				<TextView
					android:id="@+id/wy_text4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="7dp"
					android:gravity="center_vertical"
					style="@android:style/TextAppearance.Small.Inverse"/>
				
			</LinearLayout>

		</LinearLayout>

		<!-- download panel -->
		<LinearLayout
			android:id="@+id/wy_panel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<!-- download text -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:paddingLeft="10dp"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:background="@drawable/wy_header_cell_bg"
				style="@android:style/TextAppearance.Medium"
				android:textColor="@color/wy_header_cell_text_color"
				android:textStyle="bold"
				android:text="@string/wy_label_download_source"/>

			<!-- market link container -->
			<LinearLayout
				android:id="@+id/wy_panel4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"/>
		
		</LinearLayout>

		<!-- screenshot panel -->
		<LinearLayout
			android:id="@+id/wy_panel2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- screenshot text -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:paddingLeft="10dp"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:background="@drawable/wy_header_cell_bg"
				style="@android:style/TextAppearance.Medium"
				android:textColor="@color/wy_header_cell_text_color"
				android:textStyle="bold"
				android:text="@string/wy_label_screenshots"/>

			<!-- small screenshot gallery -->
			<Gallery
				android:id="@+id/wy_gallery"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="7dp"
				android:paddingBottom="7dp"
				android:paddingLeft="7dp"
				android:paddingRight="7dp"
				android:spacing="7dp"
	    		android:unselectedAlpha="0.5"/>
		
		</LinearLayout>

		<!-- screenshot panel -->
		<LinearLayout
			android:id="@+id/wy_panel3"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<!-- screenshot text -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:paddingLeft="10dp"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:background="@drawable/wy_header_cell_bg"
				style="@android:style/TextAppearance.Medium"
				android:textColor="@color/wy_header_cell_text_color"
				android:textStyle="bold"
				android:text="@string/wy_label_description"/>
				
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:orientation="horizontal"
				android:background="@drawable/wy_cell_bg_style1">
				
				<!-- desc text -->
				<TextView
					android:id="@+id/wy_text5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					style="@android:style/TextAppearance.Small.Inverse"/>
				
			</LinearLayout>
				
		</LinearLayout>
		
	</LinearLayout>
	
</ScrollView>
