<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/wy_roundrect_container_bg">
	
	<LinearLayout
		android:id="@+id/wy_tab_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<!-- friends tab -->
		<Button
			android:id="@+id/wy_tab"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/wy_tab_style1"
			android:drawableLeft="@drawable/wy_icon_radiobox"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			style="@android:style/TextAppearance.Medium.Inverse"
			android:textColor="@color/wy_sub_tab_text_color"
			android:text="@string/wy_friends_friends"/>
			
		<!-- pending tab -->
		<Button
			android:id="@+id/wy_tab2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/wy_tab_style1"
			android:drawableLeft="@drawable/wy_icon_radiobox"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			style="@android:style/TextAppearance.Medium.Inverse"
			android:textColor="@color/wy_sub_tab_text_color"
			android:text="@string/wy_friends_pending"/>
		
	</LinearLayout>
	
	<!-- list -->		
	<ListView
		android:id="@android:id/list"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:divider="@drawable/wy_separator_style2"
		android:dividerHeight="2dp"
		android:cacheColorHint="@color/wy_roundrect_container_bg"
		android:fastScrollEnabled="true"
		android:scrollbarThumbVertical="@drawable/wy_scrollbar_vertical_thumb_style1"
		android:fadingEdge="none"/>

	<!-- button bar -->
	<LinearLayout
		android:id="@+id/wy_button_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		android:paddingLeft="7dp"
		android:paddingRight="7dp"
		android:background="@drawable/wy_cell_bg_style1">
		
		<!-- search user button -->
	    <Button
	    	android:id="@+id/wy_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:minWidth="100dp"
	    	style="@android:style/TextAppearance.Medium"
	    	android:background="@drawable/wy_button_style1"
	    	android:text="@string/wy_button_search"/>
	    	
	</LinearLayout>
	
</LinearLayout>
