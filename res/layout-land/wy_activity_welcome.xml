<merge
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- background -->
	<View
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@color/wy_top_container_bg"/>
	
	<LinearLayout 	
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:gravity="center_vertical"
		android:paddingLeft="7dp"
		android:paddingRight="7dp"
		android:paddingTop="7dp"
		android:paddingBottom="7dp">
	
		<!-- center round rect area -->
		<com.wiyun.game.widget.RoundRectFrameLayout
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center">
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:gravity="center_vertical">
			
				<!-- title -->
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:background="@drawable/wy_title_bg_style1"
					android:gravity="center">
					
					<!-- wiyun cloud text -->
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/wy_wiyun_cloud_text"/>
						
				</LinearLayout>
				
				<!-- separator -->
				<View
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:background="@drawable/wy_separator_style2"/>
		
				<!-- features and intro text -->
				<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:paddingTop="10dp"
					android:paddingLeft="18dp"
					android:paddingRight="18dp"
					android:stretchColumns="0"
					android:background="@drawable/wy_gradient_bg_style1_with_logo">
					
					<TableRow>
					
						<!-- hint text -->
						<TextView	
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							style="@android:style/TextAppearance.Medium"
							android:textColor="@color/wy_tertiary_text_dark"
							android:text="@string/wy_label_join_wiyun_cloud"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="15dp"
							android:drawableTop="@drawable/wy_icon_users_small"
							style="@android:style/TextAppearance.Small"
							android:textColor="@color/wy_primary_text_dark"
							android:text="@string/wy_feature_million_users"/>
							
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="15dp"
							android:drawableTop="@drawable/wy_icon_leaderboard_small"
							style="@android:style/TextAppearance.Small"
							android:textColor="@color/wy_primary_text_dark"
							android:text="@string/wy_feature_leaderboard"/>
							
					</TableRow>

					<TableRow>
					
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_column="1"
							android:layout_marginLeft="15dp"
							android:drawableTop="@drawable/wy_icon_achievement_small"
							style="@android:style/TextAppearance.Small"
							android:gravity="center"
							android:textColor="@color/wy_primary_text_dark"
							android:text="@string/wy_feature_achievement"/>
							
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="15dp"
							android:drawableTop="@drawable/wy_icon_challenge_small"
							style="@android:style/TextAppearance.Small"
							android:gravity="center"
							android:textColor="@color/wy_primary_text_dark"
							android:text="@string/wy_feature_challenge"/>
							
					</TableRow>

					<TableRow>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_column="1"
							android:layout_marginLeft="15dp"
							android:drawableTop="@drawable/wy_icon_game_small"
							style="@android:style/TextAppearance.Small"
							android:gravity="center"
							android:textColor="@color/wy_primary_text_dark"
							android:text="@string/wy_feature_games"/>
							
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="15dp"
							android:drawableTop="@drawable/wy_icon_chat_small"
							style="@android:style/TextAppearance.Small"
							android:gravity="center"
							android:textColor="@color/wy_primary_text_dark"
							android:text="@string/wy_feature_message"/>
						
					</TableRow>
					
				</TableLayout>
							
			</LinearLayout>
			
		</com.wiyun.game.widget.RoundRectFrameLayout>
	
		<LinearLayout 	
			android:id="@+id/wy_button_bar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="7dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">
		
			<!-- deny button -->
			<Button
				android:id="@+id/wy_button"
				android:layout_width="160dp"
				android:layout_height="wrap_content"
				android:maxHeight="34dp"
				android:background="@drawable/wy_button_style2"
				style="@android:style/TextAppearance.Small.Inverse"
				android:maxLines="2"
				android:textSize="12sp"
				android:text="@string/wy_button_no_thanks"/>
				
			<!-- enable button -->
			<Button
				android:id="@+id/wy_button2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="10dp"
				android:background="@drawable/wy_button_style1"
				style="@android:style/TextAppearance.Small"
				android:drawableLeft="@drawable/wy_icon_mark"
				android:singleLine="true"
				android:textColor="@android:color/white"
				android:text="@string/wy_button_enable_wiyun_cloud"/>
				
		</LinearLayout>
		
	</LinearLayout>

</merge>