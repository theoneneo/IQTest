<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/wy_roundrect_container_bg">

	<TextView
		android:id="@+id/wy_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:paddingLeft="10dp"
		android:singleLine="true"
		android:gravity="center_vertical"
		android:background="@drawable/wy_header_cell_bg"
		style="@android:style/TextAppearance.Medium"
		android:textColor="@color/wy_header_cell_text_color"
		android:includeFontPadding="false"
		android:textStyle="bold"/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:paddingLeft="7dp"
		android:paddingRight="12dp"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:background="@drawable/wy_cell_bg_style1">
		
		<!-- icon view -->
		<ImageView
			android:id="@+id/wy_image"
			android:layout_width="@dimen/wy_portrait_frame_size"
			android:layout_height="@dimen/wy_portrait_frame_size"
			android:scaleType="center"
			android:background="@drawable/wy_picture_frame"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="10dp"
			android:orientation="vertical">
		
			<!-- text view -->
			<TextView 
				android:id="@+id/wy_text2"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    style="@android:style/TextAppearance.Small.Inverse"
			    android:textStyle="bold"/>
			    
			<!-- bet button -->
			<Button
				android:id="@+id/wy_button3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/wy_button_style1"
				style="@android:style/TextAppearance.Medium"
				android:text="@string/wy_button_bet"/>
		    
		</LinearLayout>
		    
	</LinearLayout>

	<!-- message and buttons -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:paddingLeft="7dp"
		android:paddingRight="7dp"
		android:orientation="horizontal"
		android:gravity="center">

		<!-- content -->
		<EditText
			android:id="@+id/wy_edit"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/wy_edit_box"/>
			
		<!-- send button -->
		<Button
			android:id="@+id/wy_button"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dp"
			android:background="@drawable/wy_button_style1"
			style="@android:style/TextAppearance.Medium"
			android:text="@string/wy_button_send"/>
			
		<!-- cancel button -->
		<Button
			android:id="@+id/wy_button2"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dp"
			android:background="@drawable/wy_button_style3"
			style="@android:style/TextAppearance.Medium"
			android:text="@string/wy_button_cancel"/>
			
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/wy_tab_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<!-- friends tab -->
		<Button
			android:id="@+id/wy_tab"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/wy_tab_style1"
			android:drawableLeft="@drawable/wy_icon_radiobox"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			style="@android:style/TextAppearance.Medium.Inverse"
			android:textColor="@color/wy_sub_tab_text_color"
			android:text="@string/wy_send_challenge_friends"/>
			
		<!-- neighbor tab -->
		<Button
			android:id="@+id/wy_tab2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/wy_tab_style1"
			android:drawableLeft="@drawable/wy_icon_radiobox"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			style="@android:style/TextAppearance.Medium.Inverse"
			android:textColor="@color/wy_sub_tab_text_color"
			android:text="@string/wy_send_challenge_neighbors"/>
			
		<!-- by score tab -->
		<Button
			android:id="@+id/wy_tab3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/wy_tab_style1"
			android:drawableLeft="@drawable/wy_icon_radiobox"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			style="@android:style/TextAppearance.Medium.Inverse"
			android:textColor="@color/wy_sub_tab_text_color"
			android:text="@string/wy_send_challenge_by_score"/>
		
	</LinearLayout>
	
	<!-- friends list -->
	<ListView
		android:id="@android:id/list"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:divider="@drawable/wy_separator_style2"
		android:dividerHeight="2dp"
		android:cacheColorHint="@android:color/transparent"
		android:scrollbarThumbVertical="@drawable/wy_scrollbar_vertical_thumb_style1"
		android:fadingEdge="none"/>
		
</LinearLayout>
